image: docker:latest
variables:
  DEPTH_DEFAULT: 1
  # If using docker-in-docker, you'll probably want these
  #DOCKER_HOST: tcp://docker:2375/
  #DOCKER_DRIVER: overlay2

# Uncomment if using docker-in-docker
#services:
#- docker:dind

before_script:
  - export $(egrep -v '^#' .env | xargs)
  - docker info
  - docker login -u "${CI_REGISTRY_USER}" -p "${CI_REGISTRY_PASSWORD}" "${CI_REGISTRY}"
  - export IMAGE_NAME=$CI_REGISTRY_IMAGE:$CI_COMMIT_BRANCH

.build:
  stage: build
  script:
    - docker pull $IMAGE_NAME || true
    - docker build --tag $IMAGE_NAME --build-arg ODOO_VERSION=$ODOO_MINOR odoo/
    - docker image push $IMAGE_NAME &> /dev/null

Release:
  extends: .build
  only:
    # modify to include the branches you want to auto-build
    refs: []
