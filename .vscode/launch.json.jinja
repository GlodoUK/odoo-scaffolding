{%- import "_macros.jinja" as macros -%}
{
  // More info on this file: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: pytest",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["tests"],
      "console": "integratedTerminal",
      "subProcess": true
    },
    {
      "name": "Python: pytest verbose",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-vv", "tests"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true
    },
    {
      "name": "Debug Odoo",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceRoot}/odoo",
          "remoteRoot": "/opt/odoo"
        }
      ],
      "port": {{ macros.version_major(odoo_version) }}899,
      "host": "localhost",
      "preLaunchTask": "invoke stopstart"
    }
  ]
}
