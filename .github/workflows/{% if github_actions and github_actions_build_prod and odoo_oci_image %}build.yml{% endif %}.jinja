{% import "_macros.jinja" as macros -%}
name: Build {{ macros.version_minor(odoo_version) }} (Production)

on:
  workflow_dispatch:
  push:
    branches:
      - "{{ macros.version_minor(odoo_version) }}"
    paths:
      - "odoo/**"
      - ".github/workflows/build.yaml"

env:
  ODOO_VERSION: "{{ macros.version_minor(odoo_version) }}"

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v1

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Login to DockerHub
        uses: docker/login-action@v1
        with:
          username: {% raw %}${{ secrets.DOCKER_HUB_USER }}{% endraw %}
          password: {% raw %}${{ secrets.DOCKER_HUB_TOKEN }}{% endraw %}

      - name: Get current date
        id: date
        run: |
          echo "::set-output name=date::$(date +%s)"

      - name: Build and push
        uses: docker/build-push-action@v2
        with:
          context: odoo
          file: ./odoo/Dockerfile
          platforms: linux/amd64
          push: true
          build-args: |
            ODOO_VERSION={% raw %}${{ env.ODOO_VERSION }}{% endraw %}
          tags: |
            {{ odoo_oci_image }}:{% raw %}${{ env.ODOO_VERSION }}-${{ steps.date.outputs.date }}{% endraw %}
